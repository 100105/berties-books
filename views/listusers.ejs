<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Bertie’s Bookshop</title>
  <style>
    body {
      font-family: "Poppins", Arial, sans-serif;
      background-color: #f9f5f2; 
      margin: 0;
      padding: 0;
      color: #4a3f35;  
    }

    header {
      background-color: #d9b8a3; 
      color: white;
      padding: 25px;
      text-align: center;
      letter-spacing: 1px;
    }

    h1 {
      margin: 0;
      font-size: 30px;
    }

    h2 {
      color: #a07c68; 
      margin: 30px 0 10px 60px;
      font-weight: 500;
      font-size: 22px;
    }

    table {
      border-collapse: collapse;
      width: 70%;
      margin-left: 60px;
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
    }

    th {
      color: #6b4f3b; 
      font-size: 18px;
      font-weight: 600;
    }
  </style>
</head>

<body>
  <header>
    <h1>Bertie’s Bookshop</h1>
    <p><a href="/">Return to Home</a></p>
  </header>

  <h2>Registered Users</h2>

  <table>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
    <% users.forEach(function(user) { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first %></td>
        <td><%= user.last %></td>
        <td><%= user.email %></td>
      </tr>
    <% }); %>
  </table>

</body>
</html>
